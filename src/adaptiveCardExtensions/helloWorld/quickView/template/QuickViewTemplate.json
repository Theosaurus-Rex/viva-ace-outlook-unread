{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "Container",
      "$data": "${emails}",
      "items": [
        {
          "type": "TextBlock",
          "text": "${sender}:",
          "weight": "bolder",
          "size": "medium"
        },
        {
          "type": "TextBlock",
          "text": "${subject}",
          "wrap": true
        }
      ]
    }
  ]
}